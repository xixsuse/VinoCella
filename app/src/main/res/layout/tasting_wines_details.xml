<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:layout_marginTop="6dp"
    android:layout_marginBottom="6dp"
    android:elevation="4dp">


    <LinearLayout
        android:id="@+id/tasting_wine_details_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="6dp"
        android:paddingEnd="6dp"
        android:paddingTop="6dp"
        android:paddingBottom="6dp"
        android:drawSelectorOnTop="true"
        android:orientation="horizontal">


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tasting_wine_vintage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="6dp"
                    android:textSize="20sp"
                    android:fontFamily="sans-serif-medium"
                    android:textAllCaps="true"
                    android:textColor="@color/textColorEarthquakeLocation"
                    android:text="Vintage" />

                <TextView
                    android:id="@+id/tasting_wine_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="6dp"
                    android:textSize="20sp"
                    android:fontFamily="sans-serif-light"
                    android:textAllCaps="false"
                    android:textColor="@color/textColorEarthquakeLocation"
                    android:text="Wine Name" />

                <TextView
                    android:id="@+id/tasting_wine_description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="6dp"
                    android:textSize="20sp"
                    android:fontFamily="sans-serif-light"
                    android:textAllCaps="false"
                    android:textColor="@color/textColorEarthquakeLocation"
                    android:text="Description" />

            </LinearLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:textSize="18sp"
                            android:fontFamily="sans-serif-light"
                            android:textAllCaps="false"
                            android:textColor="@color/textColorEarthquakeLocation"
                            android:text="Delete" />

                        <ImageView
                            android:id="@+id/delete_wine"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:src="@drawable/ic_delete_black_24dp" />

                    </RelativeLayout>


                    <ImageView
                        android:id="@+id/add_wine_photo"
                        android:layout_width="70dp"
                        android:layout_height="130dp"
                        android:src="@drawable/sample_wine"
                        android:scaleType="centerCrop"
                        android:adjustViewBounds="true" />

                </LinearLayout>

            </RelativeLayout>


        </RelativeLayout>

    </LinearLayout>


</FrameLayout>