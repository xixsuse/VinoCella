<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.android.cellavino">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.CAMERA"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />


    <application
        android:allowBackup="true"
        android:icon="@mipmap/app_logo"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Accounts.Login" />
        <activity android:name=".Accounts.CreateAccount" />
        <activity android:name=".UserInterface.AddWine" />
        <activity android:name=".UserInterface2.CreateNewWine" />
        <activity android:name=".UserInterface2.EditWine" />
        <activity android:name=".UserInterface2.ArchiveWine" />
        <activity android:name=".UserInterface2.WineInformation" />
        <activity android:name=".UserInterface2.MyWinesList" />
        <activity android:name=".UserInterface2.EditProfile" />
        <activity android:name=".UserInterface2.MyTastings" />
        <activity android:name=".UserInterface2.TastingWines" />
        <activity android:name=".UserInterface2.CreateNewTasting" />

    </application>
    <uses-feature
        android:name="android.hardware.camera"
        android:required="true"></uses-feature>

    <provider
        android:name="android.support.v4.content.FileProvider"
        android:authorities="com.example.android.fileprovider"
        android:exported="false"
        android:grantUriPermissions="true">
        <meta-data
            android:name="android.support.FILE_PROVIDER_PATHS"
            android:resource="@xml/file_paths"></meta-data>
    </provider>
</manifest>